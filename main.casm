; CrypticOS Main Test Prompt

include "kernel/kernel.casm"


var input 0

out ": Cryptic OS"
call newline

top:
	out ": "
	mov input getchar

	cmp input 'b' help
	cmp input 'l' load
	cmp input 'e' exit
	out "Unknown"

	call newline
jmp top

help:
	out "HL"
	call newline
jmp top

load:
	out ""
jmp top

newline:
	inl "!**.+++."
ret

exit:
